{
  "name": "bridge",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    "source=bridge-bashhistory,target=/commandhistory,type=volume",
    "source=${localEnv:HOME}/.aws,target=/root/.aws,type=bind,readonly",
    "source=${localEnv:HOME}/.kube,target=/root/.kube,type=bind,readonly"
  ],
  "postCreateCommand": "sudo chown $(id -u) /commandhistory",
  "remoteEnv": {
    "HISTFILE": "/commandhistory/.shell_history"
  },
  "appPort": [3000]
}
